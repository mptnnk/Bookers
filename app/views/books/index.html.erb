<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |f|%>
  <tr>
   <td><%= f.title %></td>
   <td><%= f.body %></td>
   <td><%= link_to"show",book_path(f.id)%></td>
   <td><%= link_to"Edit",edit_book_path(f.id)%></td>
   <td><%= link_to"Destroy",book_path(f.id),method: :delete,"data-confirm"=>"Are you sure?"%></td>
  </tr>
  <% end %>
 </tbody>
</table>


<% if @book.errors.any? %>
 <%= @book.errors.count %>error prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message|%>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model:@book do |f|%>
 <h2>New Book</h2>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>
 </br><%= f.submit'Create Book'%>
<% end %>
